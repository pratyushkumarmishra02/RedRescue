<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradient background -->
    <gradient
        android:startColor="@color/main_color"
        android:endColor="@color/mainColor"
        android:angle="45" />

    <!-- Rounded corners -->
    <corners
        android:radius="16dp" />

    <!-- Border -->
    <stroke
        android:width="2dp"
        android:color="#FFFFFF" />

    <!-- Inner padding (optional if you want spacing inside) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

</shape>
